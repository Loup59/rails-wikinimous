<%= form_with model: @article do |f| %>
  <div style="margin: 10px">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div style="margin: 10px">
    <%= f.label :content %>
    <%= f.text_field :content %>
  </div>
  <%= f.submit %>
<% end %>

<%= link_to "Back to list", articles_path%>
